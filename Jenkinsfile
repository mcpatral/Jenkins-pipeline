pipeline {

    agent any 

    stages{
        stage("Build") {
            steps {
                echo 'Building the application'
                sleep 5
            }
        }
        stage("Test") {
            steps {
                echo 'Testing the application'
                sleep 5
            }
        }
        stage("Deploy") {
            steps {
                echo 'Deploying the application'
                sleep 5
            }
        }
    }
}